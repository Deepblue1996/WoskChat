<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/mBackGround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.deep.dpwork.weight.StatusBarPaddingView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backTouch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@mipmap/ic_icon_back" />

            <TextView
                android:text="User Info"
                android:textSize="@dimen/normalFontSize"
                android:textColor="@color/darkText"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <com.prohua.roundlayout.RoundAngleFrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        app:radius="10dp">

        <RelativeLayout
            android:id="@+id/memberLin"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/mBackGround">

            <com.prohua.roundlayout.RoundAngleFrameLayout
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                app:radius="30dp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#f0f0f0"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/ic_net_deep"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </com.prohua.roundlayout.RoundAngleFrameLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Head portrait"
                    android:id="@+id/userName"
                    android:textStyle="bold"
                    android:textColor="@color/darkText"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/userId"
                    android:layout_marginTop="5dp"
                    android:text="id: 1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/smallFontSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
    </com.prohua.roundlayout.RoundAngleFrameLayout>

</LinearLayout>