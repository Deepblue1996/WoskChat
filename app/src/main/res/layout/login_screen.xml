<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/backLin"
    android:background="@color/mBackGround"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.deep.dpwork.weight.StatusBarPaddingView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/backTouch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@mipmap/ic_icon_back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/centerBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_net_deep" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/bigFontSize"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/str_qun"
                    android:textColor="@color/normalText"
                    android:textSize="@dimen/smallFontSize"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:text="User"
            android:textColor="@color/darkText"
            android:textSize="@dimen/smallSFontSize" />

        <com.prohua.roundlayout.RoundAngleFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:radius="10dp">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:background="@color/backGround">

                <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/userEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@color/transparent"
                    android:hint="Please enter the user name"
                    android:text="deep"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/smallSFontSize" />
            </LinearLayout>
        </com.prohua.roundlayout.RoundAngleFrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Password"
            android:textColor="@color/darkText"
            android:textSize="@dimen/smallSFontSize" />

        <com.prohua.roundlayout.RoundAngleFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:radius="10dp">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:background="@color/backGround">

                <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/passwordEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Please enter the user password"
                    android:inputType="textPassword"
                    android:text="123456"
                    android:textColor="@color/darkText"
                    android:textSize="@dimen/smallSFontSize" />
            </LinearLayout>
        </com.prohua.roundlayout.RoundAngleFrameLayout>

        <com.prohua.roundlayout.RoundAngleFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:radius="10dp">

            <LinearLayout
                android:id="@+id/loginBt"
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:background="@color/blue"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="@color/mBackGround"
                    android:textSize="@dimen/smallSFontSize" />
            </LinearLayout>
        </com.prohua.roundlayout.RoundAngleFrameLayout>

        <TextView
            android:id="@+id/signTouch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="No account, Sign up"
            android:textColor="@color/normalText"
            android:textSize="@dimen/smallFontSize" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>