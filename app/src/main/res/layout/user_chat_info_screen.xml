<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mBackGround"
        android:orientation="vertical">

        <com.deep.dpwork.weight.StatusBarPaddingView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backTouch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@mipmap/ic_icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="User Info"
                android:textColor="@color/darkText"
                android:textSize="@dimen/normalFontSize" />
        </RelativeLayout>
    </LinearLayout>

    <com.prohua.roundlayout.RoundAngleFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:radius="10dp">

        <RelativeLayout
            android:id="@+id/headLin"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/mBackGround"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.prohua.roundlayout.RoundAngleFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                app:radius="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f0">

                    <ImageView
                        android:id="@+id/headImg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_logo" />
                </LinearLayout>
            </com.prohua.roundlayout.RoundAngleFrameLayout>

            <TextView
                android:id="@+id/nickTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Deep"
                android:textColor="@color/darkText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="100dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="USER ID: 10000"
                    android:textColor="@color/normalText"
                    android:textSize="@dimen/smallFontSize" />

                <TextView
                    android:id="@+id/contentTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="100dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="life is nice every day."
                    android:textColor="@color/normalText"
                    android:textSize="@dimen/smallFontSize" />
            </LinearLayout>

        </RelativeLayout>
    </com.prohua.roundlayout.RoundAngleFrameLayout>

</LinearLayout>